mixin storeForm(store = {})
  form(action=`/add/${store._id || ""}` class="form" method="POST" enctype="multipart/form-data")
    label(for="name") Name
    input(type="text" name="name" value= store.name)
    label(for="description") Description
    textarea(name="description")= store.description
    //- upload an image
    label(for="photo")
    input(type="file" name="photo" id="photo" required accept="image/png, image/jpeg, image/gif")
    if store.photo
      img(src=`/uploads/${store.photo}`, alt=store.name width="200px")
    //- pick an address
    label(for="address") Adress
    input(type="text" id="address" value=(store.location && store.location.address) name="location[address]")
    label(for="lng") Address Lng
    input(type="text" id="lng" value=(store.location && store.location.coordinates[0]) name="location[coordinates][0]")
    label(for="lat") Address Lat
    input(type="text" id="lat" value=(store.location && store.location.coordinates[1]) name="location[coordinates][1]")

    - const choices = ["Wifi", "Open Late", "Vegeterian", "Family Friendly", "Licensed"]
    - const tags = store.tags || []

    ul.tags
      each choice in choices
        .tag.tag__choice
          input(type="checkbox" id=choice value=choice name="tags" checked=(tags.includes(choice)))
          label(for=choice) #{choice}

    input(type="submit", value="save" class="button")